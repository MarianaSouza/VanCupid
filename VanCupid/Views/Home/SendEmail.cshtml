@model VanCupid.Models.SendEmail
@{
    ViewBag.Title = "SendEmail";
}
<p>@ViewBag.Message</p>

<div class="logintext">
    <h4>Send your message.</h4>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @ViewBag.MessageErrorLogin
                        <fieldset>
                            <div class="form-group">
                                <div class="form-group">
                                @Html.Hidden("UserID", (int?)@ViewBag.UserID)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "your Subject" })
                            </div>
                            <div class="form-group">
                              @Html.TextAreaFor(model => model.Message, 10, 66, new { @class = "form-controls" })
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Send" class="btn btn-lg btn-block btn-default" />
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>